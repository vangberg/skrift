{
  "name": "skrift",
  "version": "0.24.0",
  "description": "Networked notes",
  "exports": "./build/main.js",
  "type": "module",
  "engines": {
    "node": ">=20.18"
  },
  "scripts": {
    "build:main": "webpack --config ./webpack.main.config.js",
    "build:renderer": "webpack --config ./webpack.renderer.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "start:electron": "npm run build:main && electron ./build/main.js",
    "start:react": "webpack serve --config ./webpack.renderer.config.js",
    "start": "concurrently \"npm:start:*\"",
    "dist": "electron-builder -mwl",
    "publish": "electron-builder --publish always",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "test": "ELECTRON_RUN_AS_NODE=1 electron --experimental-vm-modules ./node_modules/.bin/jest",
    "test-watch": "ELECTRON_RUN_AS_NODE=1 electron --experimental-vm-modules ./node_modules/.bin/jest --watch",
    "postinstall": "electron-builder install-app-deps",
    "notarize": "./notarize.sh"
  },
  "build": {
    "appId": "com.halestreet.Skrift",
    "publish": {
      "provider": "github",
      "owner": "vangberg",
      "repo": "skrift"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist"
    },
    "linux": {
      "category": "Office",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      "docs/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vangberg/skrift.git"
  },
  "keywords": [],
  "author": {
    "name": "Harry Vangberg",
    "email": "harry@vangberg.name"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vangberg/skrift/issues"
  },
  "homepage": "https://github.com/vangberg/skrift#readme",
  "devDependencies": {
    "@atlaskit/pragmatic-drag-and-drop": "^1.4.0",
    "@atlaskit/pragmatic-drag-and-drop-hitbox": "^1.0.3",
    "@handlewithcare/remark-prosemirror": "^0.1.5",
    "@nytimes/react-prosemirror": "^1.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.10.2",
    "@types/parsimmon": "^1.10.6",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.18.0",
    "autoprefixer": "^10.2.5",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-unhandled": "^5.0.0",
    "electron-updater": "^6.3.9",
    "eslint": "^9.17.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "html-webpack-plugin": "^5.3.1",
    "immer": "^10.1.1",
    "jest": "^29.7.0",
    "markdown-it": "^14.1.0",
    "parsimmon": "^1.17.0",
    "postcss": "^8.2.15",
    "postcss-loader": "^8.1.1",
    "postcss-nested": "^7.0.2",
    "prosemirror-commands": "^1.6.2",
    "prosemirror-history": "^1.4.1",
    "prosemirror-inputrules": "^1.4.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-markdown": "^1.13.1",
    "prosemirror-model": "^1.24.1",
    "prosemirror-schema-list": "^1.5.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.10.2",
    "prosemirror-view": "^1.37.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.16",
    "tiny-invariant": "^1.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "unified": "^11.0.5",
    "use-immer": "^0.11.0",
    "webpack": "^5.37.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0"
  }
}