{
  "name": "Skrift",
  "version": "0.2.0",
  "description": "Networked notes",
  "main": "build/electron.js",
  "scripts": {
    "build:electron": "webpack --config ./webpack.electron.config.js",
    "build:react": "webpack --config ./webpack.react.config.js",
    "build": "npm run build:electron && npm run build:react",
    "start:electron": "npm run build:electron && electron ./build/electron.js",
    "start:react": "webpack-dev-server --config ./webpack.react.config.js",
    "start": "concurrently \"npm:start:*\"",
    "dist:mac": "electron-builder",
    "dist:win": "electron-builder -w portable",
    "install:mac": "rm -rf /Applications/Skrift.app && cp -r dist/mac/Skrift.app /Applications/",
    "install:linux": "dpkg -i dist/Skrift_1.0.0_amd64.deb",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test-watch": "jest --watch",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.halestreet.Skrift",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "deb"
      ]
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vangberg/skrift.git"
  },
  "keywords": [],
  "author": {
    "name": "Harry Vangberg",
    "email": "harry@vangberg.name"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vangberg/skrift/issues"
  },
  "homepage": "https://github.com/vangberg/skrift#readme",
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-dom": "^16.9.6",
    "@types/remarkable": "^1.7.4",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "classnames": "^2.2.6",
    "concurrently": "^5.1.0",
    "css-loader": "^3.5.2",
    "electron": "^8.2.2",
    "electron-builder": "^22.8.0",
    "electron-is-dev": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "fast-clone": "^1.5.13",
    "html-webpack-plugin": "^3.2.0",
    "immer": "^5.3.6",
    "is-hotkey": "^0.1.6",
    "jest": "^25.3.0",
    "postcss-loader": "^3.0.0",
    "react": "^16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.13.1",
    "react-use-elmish": "^1.0.0",
    "remarkable": "^1.7.4",
    "slate": "^0.57.1",
    "slate-history": "^0.57.1",
    "slate-hyperscript": "^0.57.1",
    "slate-react": "^0.57.1",
    "sqlite": "^4.0.7",
    "style-loader": "^1.1.3",
    "tailwindcss": "^1.8.10",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "sqlite3": "^4.2.0"
  }
}
